# ===========================================
# GRAAVITONS SMS - Backend Environment Config
# ===========================================
# Copy this file to .env and fill in the values
#   cp .env.example .env

# ── Database Configuration ──
DB_HOST=localhost
DB_PORT=5432
DB_NAME=graavitons_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# ── Database Connection Pool ──
DB_POOL_MIN=2
DB_POOL_MAX=10

# ── Server Configuration ──
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ── CORS Configuration ──
# Comma-separated origins. For production, specify exact origins:
#   http://yourdomain.com,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# ── JWT Configuration ──
# IMPORTANT: Generate a strong random secret for production:
#   python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_generate_a_random_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── App Configuration ──
APP_TITLE=GRAAVITONS SMS API
DEBUG=false
