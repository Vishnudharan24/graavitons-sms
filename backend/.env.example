# ===========================================
# GRAAVITONS SMS - Backend Environment Config
# ===========================================
# Copy this file to .env and fill in the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=graavitons_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# CORS Configuration (comma-separated origins, use * for all)
# For production, specify exact origins: http://yourdomain.com,https://yourdomain.com
CORS_ORIGINS=*

# App Configuration
APP_TITLE=GRAAVITONS SMS API
DEBUG=false

# JWT Configuration
# Generate a secret with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change_me_to_a_random_secret
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440
